<#import "parts/common.ftl" as c>
<@c.page>
    <div class="container" mt-3>
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <td scope="col">Id</td>
                    <td scope="col">Имя</td>
                    <td scope="col">Логин</td>
                    <td scope="col">Пароль</td>
                </tr>
                </thead>
                <tbody>
                <#list allUsers as user>
                    <tr>
                        <td>${user.id}</td>
                        <td>${user.name}</td>
                        <td>${user.login}</td>
                        <td>${user.password}</td>
                    </tr>
                </#list>
                </tbody>
            </table>
        </div>
        <div>
            <a href="/addClient" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add client</a>
        </div>
    </div>
</@c.page>
